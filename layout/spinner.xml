<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PcActivity">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/spinner"
        android:layout_centerHorizontal="true"
        android:id="@+id/photo"
        />
    <SeekBar
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@id/photo"
        android:max="10"
        android:min="0"
        android:id="@+id/seekbar"
        />

    <TextView
        android:id="@+id/progres"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@id/seekbar"
        android:text="0"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/nazwa"
        android:layout_width="206dp"
        android:layout_height="85dp"
        android:layout_below="@id/seekbar"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/opis"
        android:layout_width="206dp"
        android:layout_height="85dp"
        android:layout_below="@id/nazwa"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/cena_jednostkowa"
        android:layout_width="184dp"
        android:layout_height="44dp"
        android:layout_below="@id/seekbar"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/nazwa"
        android:text="cena jednostkowa"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/price_one"
        android:layout_width="200dp"
        android:layout_height="62dp"
        android:textSize="20dp"
        android:layout_below="@id/cena_jednostkowa"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="-3dp"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/price_all"
        android:layout_width="203dp"
        android:layout_height="57dp"
        android:layout_below="@id/price_one"
        android:layout_alignParentRight="true"
        android:layout_marginTop="61dp"
        android:layout_marginRight="2dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="184dp"
        android:layout_height="44dp"
        android:layout_below="@id/price_all"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-107dp"
        android:layout_marginRight="1dp"
        android:text="cena całości"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/add_basket"
        android:layout_width="125dp"
        android:layout_height="65dp"
        android:layout_below="@id/price_all"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-61dp"
        android:layout_marginRight="252dp"
        android:text="dodaj do koszyka"
        android:textAlignment="center" />

</RelativeLayout>